<p id="notice"><%= notice %></p>

<h1 class='text-center'>Lists</h1>

<div class="container">
  <div class="row align-items-center">
    <table class='col'>
      <thead>
        <tr>
          <th>Name</th>
          <!--<th colspan="3"></th>-->
        </tr>
      </thead>

      <tbody class='col'>
        <% @lists.each do |list| %>
          <tr>
            <td><%=link_to list.name, list_path(list) %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>

  <%= link_to 'Create New List', new_list_path %>
</div>


